#include <cstdlib>
#include <iostream>

using namespace std;
float getArea(float pi, int r){
      return 4*pi*r*r;
      }
float getVolume(float pi, int r){
      return 4*pi*r*r*r/3;
      }
int main(int argc, char *argv[])
{
    float pi = 3.1415926;
    int i = 4;
    
    cout << "表面積: " << getArea(pi,i) << endl;
    cout << "體積: " << getVolume(pi,i) << endl;
     
    
    system("PAUSE");
    return EXIT_SUCCESS;
}

